<div class="images_collection">
  <% locals[:gallery].thumbnails.each do |thumbnail| %> 
    <div class="thumb_<%= thumbnail.id %> thumb">
      <a class="fancybox" rel="group" href="<%= thumbnail.picture.image.url(:original)%>" ><%= image_tag thumbnail.thumb.url(:original)%></a>
      <% if user_signed_in? %>
        <%= link_to "X", gallery_thumbnail_path(locals[:gallery].id, thumbnail), method: :delete, :class => "delete_thumb btn btn-danger pull-right" %>
        <%= link_to "Edit", edit_gallery_thumbnail_path(locals[:gallery].id, thumbnail), :class => "edit_thumb btn btn-warning pull-right"%>
      <% end %>
    </div>
  <% end %>
</div>