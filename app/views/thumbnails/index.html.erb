<section class="container">
  <div class="main-heading">
    <h1><%= @gallery.name %></h1>
    <% if user_signed_in? %>
      <%= link_to "Add picture", new_gallery_thumbnail_path(@gallery), :class => "new_picture btn btn-success pull-right" %>
    <% end %>
  </div>

  <%= render 'layouts/thumbnails', :locals => { :gallery => @gallery } %>
  
</section>